        <div id="page-wrapper">

            <div>
                <div class="row">
                    <div class="col-sm-12">
                        <h3>
                            <label>时间节点设置</label>
                        </h3>
                    </div>
                </div>
                <form action="/Gao_Admin/creatSetting">
                    <div class="row">
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;名称</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;开始时间</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;结束时间</label>  </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;学生申报阶段时间</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <input name="InfoStart" type="date" required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                        <div class="col-sm-4">
                            <input name="InfoEnd" type="date" required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;第一轮导师选择时间</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <input name="FirstStart" type="date" required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                        <div class="col-sm-4">
                            <input name="FirstEnd" type="date" required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;第二轮导师选择时间</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <input name="SecondStart" type="date" required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                        <div class="col-sm-4">
                            <input name="SecondEnd" type="date" required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                        </div>
                        <div class="col-sm-4">
                        </div>
                        <div class="col-sm-4">
                            <button id="btn_add_subject" type="submit" class="btn btn-default" style="left:auto">
                                更新
                            </button>
                        </div>
                    </div>
                </form>
                    <div class="row">
                        <div class="col-sm-12">
                            <h3>
                                <label>当前时间计划</label>
                            </h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;名称</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;开始时间</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;结束时间</label>  </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;学生申报阶段时间</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <input name="Start_Time"  value ="@ViewData["InfoStart"]"type="text" readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                        <div class="col-sm-4">
                            <input name="Start_Time" value="@ViewData["InfoEnd"] " type="text" readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;第一轮导师选择时间</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <input name="Start_Time"  type="text" value="@ViewData["FirstStart"] " readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                        <div class="col-sm-4">
                            <input name="Start_Time" value="@ViewData["FirstEnd"]" type="text" readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <p><label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;第二轮导师选择时间</label>  </p>
                        </div>
                        <div class="col-sm-4">
                            <input name="Start_Time" value="@ViewData["SecondStart"]" type="text" readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                        <div class="col-sm-4">
                            <input name="Start_Time" value="@ViewData["SecondEnd"]" type="text" readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                    </div>
</div>




