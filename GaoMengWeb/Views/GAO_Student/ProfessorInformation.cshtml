        <div id="page-wrapper">

            <div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;姓名</label>
                            <input name="ProName" value="@ViewData["ProName"]" readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                        <div class="col-sm-6">
                            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;工号</label>
                            <input name="ProID" type="number" value="@ViewData["ProID"]" readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;职称</label>
                            <input name="ProTitle" value="@ViewData["ProTitle"]" readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>

                        <div class="col-sm-6">
                            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;最大招收学生数</label>
                            <input name="ProMaxNum" type="number" value="@ViewData["ProMaxNum"]" readonly required class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6" style="margin-top:30px">
                            <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;介绍页面URL </label>
                            <a href="@ViewData["ProInfoUrl"]" class="send-text" style="margin-top: 10px; margin-left:20px; width: 200px;height: 34px;border-radius:3px ;  border: 1px solid rgb(204,204,204) ;">介绍页面</a>
